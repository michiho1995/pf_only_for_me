<div class="container">
  <div class="row">
      <h2>Users</h2>
      <table class="table">
        <thead>
          <tr>
            <th>プロフィール画像</th>
            <th>名前</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= attachment_image_tag user, :profile_image, :fill, 50, 50,  fallback: "no_image.jpg",size: "50x50" %></td>
              <td><%= user.name %></td>
              <td>follows<%= user.followings.count %></td>
              <td>followers<%= user.followers.count %></td>
              <td><%= render 'relationships/follow_form',user: user %></td>
              <td><%= link_to '詳細', user_path(user) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
  </div>
</div>