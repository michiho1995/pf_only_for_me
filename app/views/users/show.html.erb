
<div class="container">
  <div class="row">
    <h2>マイページ</h2>
    <div class="col-xs-3">
<div>
  登録方法
  <% if @user.id == current_user.id %>
     <p>
      <%= link_to edit_user_path(@user) do %>
        <span class= "col-xs-12 btn btn-default glyphicon glyphicon-cog"></span>
      <% end %>
     </p>
   <% end %>
</div>
<table class="table">
        <tbody>
           <%= attachment_image_tag @user, :profile_image, :fill, 60, 60,  fallback: "no_image.jpg",size: "100x100" %>
             <tr>
              <th class="profile-name">名前      <%= @user.name %></th>          <!--@user → user-->
             </tr>
             <tr>
              <th class="profile-introduction">      <%= @user.introduction %></th>  <!--@user → user-->
             </tr>
        </tbody>
   </table>
  </div>

    <div class="col-xs-9">
      <h3>投稿一覧</h3>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
              <tr>
                <td><%= link_to attachment_image_tag(post, :image, :fill, 100, 100), post_path(post.id) %></td>
                <td><%= link_to post.title, post_path(post) %></td>
                <td><%= post.body %></td>
              </tr>

          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div
