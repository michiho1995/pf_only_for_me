<div class="edit">
  <div class="container">
  <div class="post">
    <h1>編集画面</h1>
    <br>
      <% if @user.errors.any? %>
       <div class="error_messages">
        <h3><%= @user.errors.count %>error prohibited this book from being saved:</h3>
          <% @user.errors.full_messages.each do |message| %>
            <p><%= message %></p>
          <% end %>
       </div>
      <% end %>
        <br>
          <%= form_with model:@user, local:true do |f| %>
            <label >名前</label>
          <%= f.text_field :name, autofocus: true%>
        <br>
        <br>
          <%= attachment_image_tag @user, :profile_image, :fill, 200, 200, fallback: 'no_image.jpg', onClick: "$('.img_field').click()", class: 'center-block img-thumbnail img-responsive img_prev' %>
          <%= f.file_field :profile_image, class: 'img_field', style: 'display:none;' %>
        <br>
            <label for="user_introduction">自己紹介文</label>
              <%= f.text_area :introduction %>
        <br>
        <br>
              <%= f.submit "更新" %>
          <% end %>
          <br>
          <br>
    </div>
  </div>
</div>
</div>
