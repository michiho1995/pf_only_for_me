<div class="other">
  <div class="container">
    <div class="row">
      <% if @post.errors.any? %>
        <div class="error_messages">
          <div id="error_explanation">
            <h2><%= @post.errors.count %>件のエラーが発生しました。</h2>
            <ul>
              <% @post.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      <% end %>
      <div class="post">
        <h1>新規投稿</h1>
        <div class="text-center">
          <%= form_with model: @post, url:'/posts', local:true do |f| %>
          　<h4>画像投稿</h4>
            <%= f.attachment_field :post_images_images, multiple: true, placeholder: "投稿画像", id: 'post_img', class: 'img_field', style: 'display:none;' %>
            <%= attachment_image_tag @post.post_images[0], :image, :fill, 200, 200, fallback: 'no_image.jpg', size: '200x200', onClick: "$('.img_field').click()", class: 'center-block img-thumbnail img-responsive img_prev' %>
            <h4>本文</h4>
            <%= f.text_area :body, size: "60x5" %>
            <h4>使用カラー</h4>
            <%= f.check_box :red %>赤
            <%= f.check_box :blue %>青
            <%= f.check_box :green %>緑
            <%= f.check_box :pink %>ピンク
            <%= f.check_box :white %>白
            <%= f.check_box :yellow %>黄
            <%= f.check_box :gold %>ゴールド
            <%= f.check_box :silver %>シルバー
            <%= f.check_box :black %>黒
            <%= f.check_box :clear %>クリア
            <%= f.check_box :brown %>ブラウン
            <h4>タグ付け</h4>
            <%= f.text_area :tag_name, size: "60x5",placeholder: "スペースを入力することで複数のタグを付けることができます。" %>
            <br>
            <%= f.submit '投稿',class: "btn btn-default" %>
            <br>
            <br>
            <br>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

