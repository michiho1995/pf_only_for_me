<div class="container">
  <div class="row">
<h2>新規投稿</h2>

<%= form_with model: @post, url:'/posts', local:true do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= @post.errors.count %>件のエラーが発生しました。</h2>
      <ul>
        <% @post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <!--<h4>タイトル</h4>-->
  <%#= f.text_field :title %>
　<!--複数画像投稿-->
  <%= f.attachment_field :post_images_images, multiple: true %>
  <H4>本文</H4>
  <%= f.text_area :body %>
  <h4>使用カラー</h4>
  <%= f.check_box :red %>赤
  <%= f.check_box :blue %>青
  <%= f.check_box :green %>緑
  <%= f.check_box :pink %>ピンク
  <%= f.check_box :white %>白
  <%= f.check_box :yellow %>黄
  <%= f.check_box :gold %>ゴールド
  <%= f.check_box :silver %>シルバー
  <%= f.check_box :black %>黒
  <%= f.check_box :clear %>クリア

  <%= f.submit '投稿' %>
<% end %>

</div>
</div>
